<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.pfa.pfaapp.PFASearchActivity">

    <include layout="@layout/ttl_bar" />

    <com.pfa.pfaapp.customviews.PFAEditText
        android:id="@+id/searchPFAET"
        style="@style/black_14_sp_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/text_bg"
        android:drawableStart="@mipmap/search"
        android:drawableLeft="@mipmap/search"
        android:drawablePadding="10dp"
        android:hint="@string/search_here"
        android:inputType="text"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:singleLine="true" />

    <ListView
        android:id="@+id/pfaSearchLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/light_grey"
        android:dividerHeight="1px"
        android:padding="7dp"
        android:scrollbars="none" />

</LinearLayout>



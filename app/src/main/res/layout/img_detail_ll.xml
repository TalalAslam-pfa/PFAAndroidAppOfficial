<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgDetailLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_weight="1"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="2dp">

    <com.pfa.pfaapp.customviews.CustomNetworkImageView
        android:id="@+id/attachmentCNIV"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="left|start"
        android:layout_margin="7dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/no_img"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/attachmentLblTV"
        style="@style/black_12_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:text="@string/applicant_cnic_image"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/selectImgTV"
        style="@style/black_12_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_image"
        android:visibility="gone" />

</LinearLayout>
